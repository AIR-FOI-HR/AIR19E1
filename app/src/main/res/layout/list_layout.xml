<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/venueImage"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/search_venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@+id/venueImage"
        android:text="Julija Merlica, 9"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/search_latitude_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_venue_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/venueImage"
        android:text="Latitude: "
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/search_latitude_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_venue_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/search_latitude_label"
        android:text="46.308219"
        android:layout_toRightOf="@+id/venueImage"/>

    <TextView
        android:id="@+id/search_longitude_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_latitude_label"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/venueImage"
        android:text="Longitude: "
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/search_longitude_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_latitude_value"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/search_longitude_label"
        android:text="16.347646"
        android:layout_toRightOf="@+id/venueImage"/>
</RelativeLayout>